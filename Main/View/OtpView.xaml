<UserControl x:Class="Main.View.OtpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Main.View"
             xmlns:vm="clr-namespace:Main.ViewModel"
             xmlns:common="clr-namespace:Main.Common" d:DataContext="{d:DesignInstance Type=vm:OtpViewModel}"
             mc:Ignorable="d" Width="250" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <common:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10, 10, 10, 10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Consolas" FontSize="18" Visibility="{Binding IsEdit, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                <TextBox Grid.Column="0" Text="{Binding Name}" TextWrapping="Wrap" FontFamily="Consolas" FontSize="18" Visibility="{Binding IsEdit, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <local:SvgIconButton Grid.Column="1" SvgPath="Assets/edit.svg" Visibility="{Binding IsEdit, Converter={StaticResource InverseBooleanToVisibilityConverter}}" Command="{Binding EditCommand}" ToolTip="Edit"/>
                <local:SvgIconButton Grid.Column="1" SvgPath="Assets/check.svg" Visibility="{Binding IsEdit, Converter={StaticResource BooleanToVisibilityConverter}}" Command="{Binding EditCompletedCommand}" ToolTip="Complete Edit"/>
                <local:SvgIconButton Grid.Column="2" SvgPath="Assets/delete.svg" Command="{Binding DeleteCommand}" ToolTip="Delete"/>
            </Grid>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="{Binding OtpCode}" Style="{StaticResource TransparentButtonStyle}" FontSize="36" FontFamily="Consolas" HorizontalAlignment="Left" Command="{Binding CopyCommand}" />
                <TextBlock Grid.Column="1" Text="{Binding CopiedText}" FontSize="14" Foreground="Green" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,5,0,0" FontFamily="Consolas" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CopiedText}" Value="✔ Copied">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Issuer}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Consolas" FontSize="18"/>
                <TextBlock Grid.Column="2" Text="{Binding TimeLeft}" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Consolas" FontSize="18"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
